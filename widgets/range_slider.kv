#:kivy 2.0.0

<RangeSlider>:
    canvas:
        # Arka plan çubuğu
        Color:
            rgba: self.track_color
        Rectangle:
            pos: self.x, self.center_y - dp(2)
            size: self.width, dp(4)
        
        # Aktif aralık
        Color:
            rgba: self.active_color
        Rectangle:
            pos: self.value_pos[0], self.center_y - dp(2)
            size: self.value_pos[1] - self.value_pos[0], dp(4)
        
        # Başlangıç tutacağı
        Color:
            rgba: self.handle_color
        Rectangle:
            pos: self.value_pos[0] - self.handle_width/2, self.center_y - self.handle_height/2
            size: self.handle_width, self.handle_height
        
        # Bitiş tutacağı
        Rectangle:
            pos: self.value_pos[1] - self.handle_width/2, self.center_y - self.handle_height/2
            size: self.handle_width, self.handle_height
